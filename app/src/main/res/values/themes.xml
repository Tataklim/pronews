<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pronews" parent="Theme.MaterialComponents">
        <item name="backgroundCardColorCustom">#333387</item>
    </style>

    <style name="Theme.Pronews.SplashTheme" parent="Theme.Pronews">
        <item name="android:windowBackground" >@drawable/splash_screen</item>
    </style>


    <style name="Theme.Pronews.Dark.Green" parent="Theme.Pronews">
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryDark">#b4004e</item>
        <item name="colorAccent">#ff6090</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#03a9f4</item>
        <item name="colorSecondaryVariant">#007ac1</item>
        <item name="colorOnSecondary">#67daff</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="colorControlActivated">?attr/colorSecondary</item>

        <!-- Цвет фона-->
        <item name="backgroundColor">#222226</item>
        <item name="backgroundColorCustom">#222226</item>
        <item name="backgroundCardColorCustom">#333336</item>
        <item name="android:itemBackground">#333336</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>

        <!-- Цвет шрифта-->
        <item name="titleTextColor">#ffffff</item>
        <item name="android:itemTextAppearance">@style/ItemText</item>
        <item name="descriptionTextColor">#939393</item>
    </style>


    <style name="Theme.Pronews.Light.Green" parent="Theme.Pronews">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#6a0080</item>
        <item name="colorAccent">#ee98fb</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#fbc02d</item>
        <item name="colorSecondaryVariant">#c49000</item>
        <item name="colorOnSecondary">#673AB7</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="colorControlActivated">?attr/colorOnSecondary</item>

        <!-- Цвет фона-->
        <item name="backgroundColor">#edeef0</item>
        <item name="backgroundColorCustom">#edeef0</item>
        <item name="backgroundCardColorCustom">#FFFFFF</item>
        <item name="android:itemBackground">#edeef0</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>


        <!-- Цвет шрифта-->
        <item name="titleTextColor">#0d0d0d</item>
        <item name="android:itemTextAppearance">@style/ItemText</item>
        <item name="descriptionTextColor">#656565</item>
    </style>


    <style name="ItemText">
        <item name="android:textColor">?attr/titleTextColor</item>
    </style>

    <style name="ActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>





    <style name="Theme.Pronews.Dark.Green.NoActionBar" parent="Theme.Pronews.Dark.Green">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Pronews.Light.Green.NoActionBar" parent="Theme.Pronews.Light.Green">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.Pronews.Dark.Green.Popup" parent="Theme.Pronews.Dark.Green">
        <item name="android:popupBackground">#333336</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.Pronews.Light.Green.Popup" parent="Theme.Pronews.Light.Green">
        <item name="android:popupBackground">#656565</item>
        <item name="android:textColor">#0d0d0d</item>
    </style>

</resources>